# Copy this file to .env and adjust values for your environment.

# Common settings path
AKASHIC_SETTINGS_PATH=config/settings.yaml

# HTTP server
AKASHIC_SERVER_HOST=0.0.0.0
AKASHIC_SERVER_PORT=8088
AKASHIC_ENABLE_MCP_HTTP_ROUTES=true
MCP_HOST=0.0.0.0
MCP_PORT=8088
MCP_API_KEY=change-me

# Vector DB
AKASHIC_QDRANT_HOST=localhost
AKASHIC_QDRANT_PORT=6333
AKASHIC_QDRANT_COLLECTION=code_index

# Embedding endpoint (host Ollama by default; change if using container profile)
AKASHIC_EMBEDDING_URL=http://host.docker.internal:11434
AKASHIC_EMBEDDING_ENDPOINT=/api/embed
AKASHIC_EMBEDDING_MODEL=nomic-embed-text
AKASHIC_EMBEDDING_DIMENSIONS=768
AKASHIC_EMBEDDING_TIMEOUT=60

# Optional reranker (set false in lightweight deployments)
AKASHIC_RERANKER_ENABLED=false
AKASHIC_RERANKER_MODEL=BAAI/bge-reranker-base
AKASHIC_RERANKER_TOP_K_CANDIDATES=100
AKASHIC_RERANKER_TOP_K_RESULTS=10

# Metadata/log paths
AKASHIC_METADATA_DB_PATH=./data/metadata.db
AKASHIC_LOG_LEVEL=INFO
AKASHIC_LOG_FILE=./data/akashic.log

# Optional C++ semantic analysis input
COMPILE_COMMANDS_PATH=./data/compile_commands.json
AKASHIC_CLANGD_PATH=clangd
